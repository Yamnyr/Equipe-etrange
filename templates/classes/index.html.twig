{% extends 'base.html.twig' %}

{% block title %}Hello ClassesController!{% endblock %}

{% block body %}
    <style>
        body { width: 100%; height: 100%; font: 18px/1.5 sans-serif;}
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 5px 6px; }
        .card { width: 20rem; float: left; margin: 90px; margin-bottom: 10px; text-align: center; padding: 5px}
        h1 { text-align: center; color: #000000; margin-top: 10px;}
        h3{ font-weight: 800;}
        p{ font-weight: 300;}
        
    </style>

    <div>
        <h1>Liste des Classes</h1>
        {% for classe in classes %}
            <div class="card">
                <img class="card-img-top" src="{{ classe.image }}" alt="Card image cap">
                <div class="card-body">
                    <h3 class="card-text">{{ classe.nom }}</h3>
                    <p>{{ classe.description }}</p>
                </div>
            </div>
        {% endfor %}
        <div style="clear: both;"></div>
    </div>
{% endblock %}
