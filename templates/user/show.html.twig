{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="p-4">

    <h1 class="h3 mb-3 fw-bold">{{ user.email }}</h1>
        <div class="table">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Classe</th>
                        <td>{{ user.classe }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th>Pv</th>
                        <td>{{ user.pv }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    <a class="btn btn-secondary" href="{{ path('app_user_index') }}">retour</a>

    <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">modifier</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
