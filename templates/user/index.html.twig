{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="p-4">
    <h1 class="h3 mb-3 fw-bold">Liste des Utilisateurs</h1>
        <div class="table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Classe</th>
                        <th>Roles</th>
                        <th>Password</th>
                        <th>Pv</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.classe }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.password }}</td>
                        <td>{{ user.pv }}</td>
                        <td>
                            <a class="btn btn-secondary" href="{{ path('app_user_show', {'id': user.id}) }}">voir</a>
                            <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    <a class="btn btn-primary" href="{{ path('app_user_new') }}">Ajouter un utilisateur</a>
    </div>
{% endblock %}
