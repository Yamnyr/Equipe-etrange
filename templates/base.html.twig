<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <style>
                body { width: 100%; height: 100%; font: 18px/1.5 sans-serif; background-color: #707070; }
            </style>
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <header>
        <nav class="navbar navbar-expand-lg  bg-dark ">
            <a class="navbar-brand ml-3 text-white">Equipe-Etrange</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_classes')}}">Classes</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{ path('app_mdj')}}">Mission</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href={{ path('app_user_index')}}>Liste Users</a></li>
                                <li><a class="dropdown-item" href={{ path('app_mission_index')}}>Liste Missions</a></li>
                                <li><a class="dropdown-item" href={{ path('app_classe_index')}}>Liste Classes</a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
                <ul class="compte ml-3">
                    {% if app.user is null %}
                        <a class="btn btn-primary text-white" href={{ path('app_login') }}>Se Connecter</a>
                        <a class="btn btn-primary text-white" href={{ path('app_register') }}>Inscription</a>
                    {% else %}
                        <a class="nav-link text-white" id="bouton" href={{ path('app_compte')}}>Mon Compte</a>
                        <a class="btn btn-danger text-white" id="bouton" href={{ path('app_logout') }}>Se Déconnecter</a>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>
    <body>
        {% for message in app.flashes('réussit') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
